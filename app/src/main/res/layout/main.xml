<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:duplicateParentState="false"
    tools:layout_editor_absoluteY="81dp"
    android:background="@color/colorPrimary"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:id="@+id/label_mode"
        android:text="Mode"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="30px"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0">

    </TextView>


    <ImageView
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:id="@+id/linearLayout"
        android:src="@drawable/eth_wifi"
        android:clickable="false"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline8"
        android:layout_marginRight="8dp">

    </ImageView>

    <TextView
        android:layout_width="5px"
        android:layout_height="wrap_content"
        android:id="@+id/img_spacer"
        android:text=""
        android:textSize="20px"
        android:clickable="false"
        tools:layout_conversion_absoluteX="30dp"
        tools:layout_conversion_absoluteY="28dp"
        tools:layout_conversion_absoluteWidth="2dp"
        tools:layout_conversion_absoluteHeight="12dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

    </TextView>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:id="@+id/img_3g"
        android:src="@drawable/eth_3g"
        android:clickable="false"
        tools:layout_conversion_absoluteX="32dp"
        tools:layout_conversion_absoluteY="28dp"
        tools:layout_conversion_absoluteWidth="25dp"
        tools:layout_conversion_absoluteHeight="25dp"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline8">

    </ImageView>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="28dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline7"
        app:layout_constraintGuide_begin="41dp"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline8"
        app:layout_constraintGuide_begin="59dp"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline9"
        app:layout_constraintGuide_begin="85dp"
        android:orientation="horizontal" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="#666666"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"></ListView>
</android.support.constraint.ConstraintLayout>
